FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    vnstock \
    pandas \
    psycopg2-binary \
    python-dotenv \
    sqlalchemy

# Copy script
COPY fetch_complete_data.py /app/

# Run the complete data fetcher
CMD ["python", "fetch_complete_data.py"]
